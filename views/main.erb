<div align="center" id="game_type" class="center">
  <h1> Welcome <%= @username %>!</h1>
  <button id="newGameButton" class="button">New Game</button>
<!--   <form action="/join/<%= @username %>"><input class="button" type="submit" value="Join Game"/></form>-->
</div>
<form align="center" id="game_form" class="center" action="/players/<%= @userid %>/games" method="post" hidden>
	<h1> Select the game size: </h1>
	<input class="combo" name="size" type=text list="sizes">
	<datalist id="sizes" >
	   <option value="small"> 5 x 5
	   <option value="medium"> 10 x 10
	   <option value="large"> 15 x 15
	</datalist>

	<h1> Select your oponent: </h1>
	<input class="combo" name="rival" type=text list="rivals">
	<datalist name="rival" id="rivals" >
	<% @rivals.each do |t| %>
 		 <option value="<%= t.username%>">  <%= t.name%>
	<% end %>
	</datalist>
	<input type="submit" class="button" text="Go!" />
</form>
